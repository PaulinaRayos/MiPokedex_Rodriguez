<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPokemonActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Pokemon"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etNumeroPokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NÃºmero del Pokemon"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        />


    <EditText
        android:id="@+id/etNombrePokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Pokemon"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />


    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>


        <Button
            android:id="@+id/btnSubirImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir imagen"
            android:textSize="16sp"
             android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

    <Button
            android:id="@+id/btnGuardarPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar pokemon"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center"/>


</LinearLayout>