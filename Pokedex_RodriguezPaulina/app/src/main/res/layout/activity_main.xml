<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rojoback"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:src="@drawable/pokedextop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pokedextitulo"/>


    <ListView
        android:id="@+id/lvPokemon"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/listview_border"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnAgregarPokemon"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/vtv"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:text="Agregar Pokemon"
            android:background="@drawable/btn"
            />

        <ImageView
            android:layout_width="470dp"
            android:layout_height="183dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pokedexbottom"/>


    </LinearLayout>

</LinearLayout>